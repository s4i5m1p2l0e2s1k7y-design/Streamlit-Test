import streamlit as st
import numpy as np
import pandas as pd
from PIL import Image

st.title('2人の思い出') # タイトル

st.write('11/09　ソラマチクリスマスマーケット') #画像の表示

img = Image.open('LINE_ALBUM_ツーショット！_251110_1.jpg') # 画像の読み込み（注意：画像はダウンロードしてパスを揃えること）
st.image(img, caption='ラブラブツーショ♡', use_column_width=True) # 画像の表示

img = Image.open('朝.jpg') # 画像の読み込み（注意：画像はダウンロードしてパスを揃えること）
st.image(img, caption='お見送りありがとー！', use_column_width=True) # 画像の表示
